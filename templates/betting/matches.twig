{% extends 'layout.twig' %}

{% block title %}Matches - Wetten{% endblock %}

{% block content %}
<div class="container">
    <div class="page-header">
        <h1>üèÜ Verf√ºgbare Matches</h1>
        <p class="page-subtitle">W√§hle ein Match und platziere deine Wette!</p>
    </div>

    <div class="matches-list">
        {% for match in matches %}
            <div class="match-betting-card" id="{{ match.id }}">
                <div class="match-info">
                    <div class="match-time">{{ match.scheduledAt }}</div>
                    <div class="match-matchup">
                        <div class="player-info">
                            <span class="player-name">{{ match.player1Name ?? 'Player 1' }}</span>
                            <span class="player-elo">ELO: {{ match.player1Elo ?? 1500 }}</span>
                        </div>
                        <span class="vs-label">VS</span>
                        <div class="player-info">
                            <span class="player-name">{{ match.player2Name ?? 'Player 2' }}</span>
                            <span class="player-elo">ELO: {{ match.player2Elo ?? 1500 }}</span>
                        </div>
                    </div>
                </div>

                <div class="betting-options">
                    <div class="bet-option" data-prediction="player1">
                        <div class="bet-label">{{ match.player1Name ?? 'Player 1' }}</div>
                        <div class="bet-odds">{{ match.odds.player1|number_format(2) }}x</div>
                    </div>
                    
                    <div class="bet-option" data-prediction="draw">
                        <div class="bet-label">Unentschieden</div>
                        <div class="bet-odds">{{ match.odds.draw|number_format(2) }}x</div>
                    </div>
                    
                    <div class="bet-option" data-prediction="player2">
                        <div class="bet-label">{{ match.player2Name ?? 'Player 2' }}</div>
                        <div class="bet-odds">{{ match.odds.player2|number_format(2) }}x</div>
                    </div>
                </div>

                <div class="bet-form" style="display: none;">
                    <input type="number" class="bet-amount-input" placeholder="Betrag" min="{{ minBet|default(10) }}" max="{{ user.fietzPoints }}" value="{{ minBet|default(10) }}">
                    <button class="btn btn-primary place-bet-btn" data-match-id="{{ match.id }}">
                        Wette platzieren
                    </button>
                </div>
            </div>
        {% else %}
            <p class="no-data">Keine Matches verf√ºgbar</p>
        {% endfor %}
    </div>
</div>

<style>
.page-header {
    text-align: center;
    margin: 3rem 0;
}

.page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.page-subtitle {
    color: var(--text-secondary);
    font-size: 1.125rem;
}

.matches-list {
    max-width: 900px;
    margin: 0 auto;
}

.match-betting-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.match-time {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    text-align: center;
}

.match-matchup {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.player-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.player-name {
    font-weight: 700;
    font-size: 1.125rem;
}

.player-elo {
    color: var(--text-muted);
    font-size: 0.875rem;
}

.vs-label {
    font-weight: 700;
    color: var(--accent-primary);
    font-size: 1.5rem;
}

.betting-options {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.bet-option {
    background: var(--bg-tertiary);
    border: 2px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
}

.bet-option:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
}

.bet-option.selected {
    border-color: var(--accent-primary);
    background: rgba(0, 231, 1, 0.1);
}

.bet-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.bet-odds {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent-primary);
}

.bet-form {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.bet-amount-input {
    flex: 1;
    padding: 0.75rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
}

.bet-amount-input:focus {
    outline: none;
    border-color: var(--accent-primary);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.match-betting-card');
    
    cards.forEach(card => {
        const options = card.querySelectorAll('.bet-option');
        const betForm = card.querySelector('.bet-form');
        const placeBtn = card.querySelector('.place-bet-btn');
        const amountInput = card.querySelector('.bet-amount-input');
        let selectedPrediction = null;
        
        options.forEach(option => {
            option.addEventListener('click', () => {
                options.forEach(o => o.classList.remove('selected'));
                option.classList.add('selected');
                selectedPrediction = option.dataset.prediction;
                betForm.style.display = 'flex';
            });
        });
        
        placeBtn.addEventListener('click', async () => {
            if (!selectedPrediction) return;
            
            const matchId = placeBtn.dataset.matchId;
            const amount = parseInt(amountInput.value);
            
            try {
                const response = await fetch('/betting/place', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ matchId, prediction: selectedPrediction, amount }),
                });
                
                const result = await response.json();
                
                if (result.success) {
                    window.BetScript.showNotification('Wette erfolgreich platziert!', 'success');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    window.BetScript.showNotification(result.error || 'Fehler beim Platzieren', 'error');
                }
            } catch (error) {
                window.BetScript.showNotification('Fehler beim Platzieren', 'error');
            }
        });
    });
});
</script>
{% endblock %}
