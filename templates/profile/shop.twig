{% extends 'layout.twig' %}

{% block title %}Shop - Cosmetics{% endblock %}

{% block content %}
<div class="container">
    <div class="page-header">
        <h1>üõçÔ∏è Cosmetics Shop</h1>
        <p class="page-subtitle">Kaufe Cosmetics f√ºr deinen Avatar mit FIETZ Points!</p>
        <div class="points-large">
            <span class="points-icon">‚≠ê</span>
            <span class="points-value">{{ user.fietzPoints }}</span>
            <span>FIETZ Points</span>
        </div>
    </div>

    <div class="shop-tabs">
        <button class="tab-btn active" data-category="all">Alle</button>
        <button class="tab-btn" data-category="hat">üé© H√ºte</button>
        <button class="tab-btn" data-category="glasses">üëì Brillen</button>
        <button class="tab-btn" data-category="background">üñºÔ∏è Hintergr√ºnde</button>
        <button class="tab-btn" data-category="frame">üñºÔ∏è Rahmen</button>
        <button class="tab-btn" data-category="badge">üèÜ Abzeichen</button>
    </div>

    <div class="cosmetics-grid">
        {% for cosmetic in cosmetics %}
            <div class="cosmetic-card" data-category="{{ cosmetic.category }}" data-rarity="{{ cosmetic.rarity }}">
                <div class="cosmetic-image">
                    <img src="{{ cosmetic.imageUrl }}" alt="{{ cosmetic.name }}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                    <div class="cosmetic-placeholder" style="display: none;">
                        {% if cosmetic.category == 'hat' %}üé©
                        {% elseif cosmetic.category == 'glasses' %}üëì
                        {% elseif cosmetic.category == 'background' %}üñºÔ∏è
                        {% elseif cosmetic.category == 'frame' %}üñºÔ∏è
                        {% elseif cosmetic.category == 'badge' %}üèÜ
                        {% endif %}
                    </div>
                </div>
                
                <div class="cosmetic-info">
                    <div class="rarity-badge rarity-{{ cosmetic.rarity }}">{{ cosmetic.rarity|upper }}</div>
                    <h3 class="cosmetic-name">{{ cosmetic.name }}</h3>
                    <p class="cosmetic-description">{{ cosmetic.description }}</p>
                </div>
                
                <div class="cosmetic-footer">
                    <div class="cosmetic-price">
                        <span class="price-icon">‚≠ê</span>
                        <span class="price-value">{{ cosmetic.price }}</span>
                    </div>
                    
                    {% if cosmetic.id in user.cosmetics %}
                        <button class="btn btn-secondary btn-sm" disabled>Besitzt du</button>
                    {% else %}
                        <button class="btn btn-primary btn-sm purchase-btn" data-cosmetic-id="{{ cosmetic.id }}" data-price="{{ cosmetic.price }}">
                            Kaufen
                        </button>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.points-large {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: center;
    margin-top: 1rem;
    font-size: 1.5rem;
    font-weight: 700;
}

.points-large .points-value {
    color: var(--accent-primary);
    font-size: 2rem;
}

.shop-tabs {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
    justify-content: center;
    flex-wrap: wrap;
}

.tab-btn {
    padding: 0.75rem 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    font-weight: 600;
}

.tab-btn:hover,
.tab-btn.active {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
}

.cosmetics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.cosmetic-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s;
}

.cosmetic-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 231, 1, 0.1);
}

.cosmetic-image {
    height: 200px;
    background: var(--bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.cosmetic-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

.cosmetic-placeholder {
    font-size: 5rem;
}

.cosmetic-info {
    padding: 1.5rem;
}

.rarity-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.rarity-common {
    background: #6c757d;
}

.rarity-rare {
    background: #007bff;
}

.rarity-epic {
    background: #6f42c1;
}

.rarity-legendary {
    background: #fd7e14;
}

.cosmetic-name {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
}

.cosmetic-description {
    color: var(--text-muted);
    font-size: 0.875rem;
}

.cosmetic-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
}

.cosmetic-price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--accent-primary);
}
</style>

<script>
// Tab filtering
document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const category = btn.dataset.category;
        document.querySelectorAll('.cosmetic-card').forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    });
});

// Purchase buttons
document.querySelectorAll('.purchase-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
        const cosmeticId = btn.dataset.cosmeticId;
        const price = parseInt(btn.dataset.price);
        
        if (!confirm(`M√∂chtest du dieses Item f√ºr ${price} FIETZ Points kaufen?`)) {
            return;
        }
        
        try {
            const response = await fetch('/shop/purchase', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ cosmeticId }),
            });
            
            const result = await response.json();
            
            if (result.success) {
                window.BetScript.showNotification('Erfolgreich gekauft!', 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                window.BetScript.showNotification('Nicht genug FIETZ Points!', 'error');
            }
        } catch (error) {
            window.BetScript.showNotification('Fehler beim Kauf', 'error');
        }
    });
});
</script>
{% endblock %}
