{% extends 'layout.twig' %}

{% block title %}Register - BetScript{% endblock %}

{% block content %}
<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Registrieren</h1>
        <p class="auth-subtitle">Erstelle deinen Account und erhalte {{ initialPoints|default(1000) }} FIETZ Points!</p>
        
        <form method="POST" action="/register" data-ajax class="auth-form">
            <div class="form-group">
                <label for="username">Benutzername</label>
                <input type="text" id="username" name="username" required class="form-control" minlength="3">
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required class="form-control">
            </div>
            
            <div class="form-group">
                <label for="password">Passwort</label>
                <input type="password" id="password" name="password" required class="form-control" minlength="6">
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">Account erstellen</button>
        </form>
        
        <p class="auth-link">
            Bereits registriert? <a href="/login">Jetzt anmelden</a>
        </p>
    </div>
</div>
{% endblock %}
